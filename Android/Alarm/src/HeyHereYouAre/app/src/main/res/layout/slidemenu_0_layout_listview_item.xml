<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="130dp">

    <CheckBox
        android:id="@+id/CheckBox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="left|center_vertical"
        android:checked="false"
        android:focusable="false"
        android:text=""/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:gravity="center|center_vertical">
        <ImageView
            android:id="@+id/ImageView_alarm_enabled"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/circle_enable"/>

        <ImageView
            android:id="@+id/ImageView_alarm_repeat_daily"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center|center_vertical"
            android:background="@color/gray"
            android:src="@mipmap/ic_daily"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView_thumb_app_icon"
        android:visibility="visible"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:layout_gravity="center|center_vertical"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">
        <TextView
            android:id="@+id/TextView_app_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:text="" />

        <TextView
            android:id="@+id/TextView_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextView_datetime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="left|center_vertical"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:text="" />
</LinearLayout>
